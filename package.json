{
  "name": "nexst-tailwind",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "serve": "run-s build start",
    "lint": "next lint",
    "prettier": "prettier --check .",
    "unit": "jest",
    "e2e": "playwright test",
    "test": "run-p -l -c --aggregate-output lint prettier unit",
    "fix": "run-s -l -c fix:lint fix:prettier",
    "fix:lint": "next lint --fix",
    "fix:prettier": "prettier --write .",
    "env": "vc env pull .env.local",
    "prepare": "husky install",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "dependencies": {
    "@mantine/core": "^4.1.3",
    "@mantine/form": "^4.1.3",
    "@mantine/hooks": "^4.1.3",
    "@mantine/next": "^4.1.3",
    "@supabase/supabase-js": "^1.33.3",
    "next": "^12.3.0",
    "qrcode.react": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "3.1.4",
    "react-hook-form": "^7.30.0",
    "tabler-icons-react": "^1.44.0",
    "zod": "^3.14.4"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@playwright/test": "1.20.1",
    "@storybook/addon-actions": "^6.4.21",
    "@storybook/addon-essentials": "^6.4.21",
    "@storybook/addon-interactions": "^6.4.21",
    "@storybook/addon-links": "^6.4.21",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/react": "^6.4.21",
    "@storybook/testing-library": "^0.0.9",
    "@tailwindcss/forms": "0.5.0",
    "@tailwindcss/line-clamp": "0.3.1",
    "@tailwindcss/typography": "0.5.2",
    "@testing-library/jest-dom": "5.16.3",
    "@testing-library/react": "13.0.0",
    "@testing-library/user-event": "14.0.0",
    "@types/jest": "27.4.1",
    "@types/node": "17.0.23",
    "@types/react": "17.0.43",
    "@types/react-test-renderer": "17.0.1",
    "@typescript-eslint/eslint-plugin": "5.17.0",
    "@typescript-eslint/parser": "5.17.0",
    "autoprefixer": "10.4.4",
    "babel-loader": "^8.2.4",
    "eslint": "8.12.0",
    "eslint-config-next": "12.1.4",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import-access": "1.0.1",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-sort-destructure-keys": "1.4.0",
    "eslint-plugin-storybook": "^0.5.8",
    "eslint-plugin-tailwindcss": "3.5.0",
    "eslint-plugin-testing-library": "5.1.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "lint-staged": "12.3.7",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.12",
    "prettier": "2.6.1",
    "react-test-renderer": "18.0.0",
    "tailwindcss": "3.0.23",
    "typescript": "4.6.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix .",
      "prettier --write ."
    ],
    "**/*.{json,md,mdx,css,html,yml,yaml,scss}": [
      "prettier --write ."
    ]
  }
}
